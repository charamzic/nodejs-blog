<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="btn">Add new</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post.slug %>">
                <%= post.title %> &nearr;
            </a>
            <div class="admin-posts-controls">
                <a href="/edit-post/<%= post.slug %>" class="btn">Edit</a>

                <form action="/delete-post/<%= post.slug %>?_method=DELETE" method="post">
                    <input type="submit" value="Delete" class="btn-delete btn">
                </form>
            </div>
        </li>
    <% }) %>
</ul>
