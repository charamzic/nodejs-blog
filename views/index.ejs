<div class="author">
    <h1 class="author__heading">Hi, I'm HoCh!</h1>
    <p class="author__body">A padawan of software development.</p>
</div>

<img src="/img/hero-image-narrow.webp" alt="some picture" class="hero-image" width="981" height="264">

<section class="articles">
    <h2 class="articles__heading">Latest posts</h2>

    <ul class="article__ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <% if ( nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older posts</a>
    <% } %>
</section>